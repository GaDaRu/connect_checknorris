{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
<style>
    .body { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .content { display: flex; justify-content: center; align-items: center; text-align: center; }
</style>


<div class="body">
    {{ parent() }}
    <h1>Bienvenido! Selecciona una categor√≠a</h1>

    <div class="row" style="margin-top: 16px">
        <div class="col-1"></div>
        <div class="col-10">
            <div class="row content">
                {% for category in categories %}
                    <a href="{{ path('joke', { id: categoriesUpperCase[loop.index - 1] }) }}" class="list-group-item col-4">
                        <p class="mb-1">{{ category }}</p>
                    </a>
                {% endfor %}

                <a href="{{ path('joke', {id: 0}) }}" class="list-group-item col-4">
                    <p class="mb-1">Random</p>
                </a>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</div>
{% endblock %}