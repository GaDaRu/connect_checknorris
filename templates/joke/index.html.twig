{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
<style>
    .body { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .center { text-align: center; margin-bottom: 16px; }
    .image { width: 200px; }
    .box {font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif; color: #ffffff; font-size: 18px; font-weight: 400; text-align: center; background: rgb(170, 170, 170); margin: 0 0 25px; overflow: hidden; padding: 20px; border-radius: 35px 0px 35px 0px; -moz-border-radius: 35px 0px 35px 0px; -webkit-border-radius: 35px 0px 35px 0px; border: 2px solid rgb(79, 79, 79);}
</style>

<div class="body">
    {{ parent() }}

    <div class="row">
        <div class="col-12 center">
            <img class="card-img-top image" src="{{ asset('img/chuck_img.png') }}" alt="Card image cap">
        </div>

        <div class="col-12">
            <div class="box">{{ joke }}</div>
        </div>
    </div>
</div>
{% endblock %}
